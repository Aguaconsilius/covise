MACRO(USE_IK)
  covise_find_package(IK)
  IF ((NOT IK_FOUND) AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing IK")
    RETURN()
  ENDIF((NOT IK_FOUND) AND (${ARGC} LESS 1))
  IF(NOT IK_USED AND IK_FOUND)
    SET(IK_USED TRUE)
    INCLUDE_DIRECTORIES(SYSTEM ${IK_INCLUDE_DIRS})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${IK_LIBRARIES})
  ENDIF()
ENDMACRO(USE_IK)

