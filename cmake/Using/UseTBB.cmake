MACRO(USE_TBB)
  covise_find_package(TBB)
  IF ((NOT TBB_FOUND)  AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing TBB")
    RETURN()
  ENDIF((NOT TBB_FOUND) AND (${ARGC} LESS 1))
  IF(NOT TBB_USED AND TBB_FOUND)
    SET(TBB_USED TRUE)
    INCLUDE_DIRECTORIES(SYSTEM ${TBB_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${TBB_LIBRARIES})
  ENDIF()
ENDMACRO(USE_TBB)

