MACRO(USE_OSGPHYSX)
  USE_PHYSX()
  covise_find_package(OSGPHYSX)
  IF ((NOT OSGPHYSX_FOUND) AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing OSGPHYSX")
    RETURN()
  ENDIF((NOT OSGPHYSX_FOUND) AND (${ARGC} LESS 1))
  IF(NOT OSGPHYSX_USED AND OSGPHYSX_FOUND)
    SET(OSGPHYSX_USED TRUE)
    INCLUDE_DIRECTORIES(SYSTEM ${OSGPHYSX_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${OSGPHYSX_LIBRARIES})
  ENDIF()
ENDMACRO(USE_OSGPHYSX)

