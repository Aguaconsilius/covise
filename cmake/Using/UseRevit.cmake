MACRO(USE_REVIT)
  covise_find_package(Revit)
  IF ((NOT REVIT_FOUND)  AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing REVIT SDK")
    RETURN()
  ENDIF((NOT REVIT_FOUND) AND (${ARGC} LESS 1))
  IF(NOT REVIT_USED AND REVIT_FOUND)
    SET(REVIT_USED TRUE)
    SET(EXTRA_REFS ${EXTRA_REFS} ${REVIT_LIBRARIES})
  ENDIF()
ENDMACRO(USE_REVIT)

