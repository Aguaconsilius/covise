MACRO(USE_NATNET)
  COVISE_FIND_PACKAGE(NATNET)
  IF ((NOT NATNET_FOUND) AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing NATNET")
    RETURN()
  ENDIF((NOT NATNET_FOUND) AND (${ARGC} LESS 1))
  IF (NOT NATNET_FOUND)
  ENDIF(NOT NATNET_FOUND)
  IF(NOT NATNET_USED AND NATNET_FOUND)
    SET(NATNET_USED TRUE)
    INCLUDE_DIRECTORIES(SYSTEM ${NATNET_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${NATNET_LIBRARIES})
  ENDIF()
ENDMACRO(USE_NATNET)

