MACRO(USE_IFCPP)
  covise_find_package(IFCPP)
  IF ((NOT IFCPP_FOUND) AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing IFCPP")
    RETURN()
  ENDIF((NOT IFCPP_FOUND) AND (${ARGC} LESS 1))
  IF(NOT IFCPP_USED AND IFCPP_FOUND)
    SET(IFCPP_USED TRUE)
    INCLUDE_DIRECTORIES(${IFCPP_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${IFCPP_LIBRARIES})
  ENDIF()
ENDMACRO(USE_IFCPP)

