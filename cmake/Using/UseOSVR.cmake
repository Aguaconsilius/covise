MACRO(USE_OSVR)
  covise_find_package(OSVR)
  IF ((NOT OSVR_FOUND) AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing OSVR")
    RETURN()
  ENDIF((NOT OSVR_FOUND) AND (${ARGC} LESS 1))
  USE_PTHREADS()
  IF(NOT OSVR_USED AND OSVR_FOUND)
    SET(OSVR_USED TRUE)
    ADD_DEFINITIONS(-DHAVE_OSVR)
    INCLUDE_DIRECTORIES(${OSVR_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${OSVR_LIBRARY} ${OSVR_GL_LIBRARY})
  ENDIF()
ENDMACRO(USE_OSVR)

